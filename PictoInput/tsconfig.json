{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["*.ts"]
}